<dl>
  <dt>
    {% if schedule.iconSet.uploaded %}
    <img src="{{ asset(schedule.iconSet.thumbnailPath) }}" alt="" width="45" height="45">
    {% else %}
    <img src="{{ asset('images/common/dammy_photo_120x120.gif') }}" alt="">
    {% endif %}
    <br> {{ schedule.name }}
  </dt>
  {% set dropped = schedule in app.user.droppedSchedulesEntities %}
  <dd>
      <a class="button" id="{{ schedule.id }}" onFocus="this.blur();">
	<strong class="{% if dropped %}drop_btn_style1_o{% else %}drop_btn_style1{% endif %}">
	  <span>
            {% if dropped %}{{ 'drop_status.dropping' | trans({}, 'DroppyWebApplicationBundle')}}
            {% else %}{{ 'drop_status.drop_action' | trans({}, 'DroppyWebApplicationBundle') }} {% endif %}
	  </span>
	</strong>
      </a>
  </dd>
</dl>

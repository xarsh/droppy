<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    
    <route id="droppy_user_ajax_drop" pattern="/drop/{id}">
        <default key="_controller">DroppyUserBundle:AJAXRequest:dropUser</default>
        <default key="id">-1</default>
        <requirement key="id">\d+</requirement>
    </route>
    
    <route id="droppy_user_ajax_undrop" pattern="/undrop/{id}">
        <default key="_controller">DroppyUserBundle:AJAXRequest:undropUser</default>
        <default key="id">-1</default>
        <requirement key="id">\d+</requirement>
    </route>
    
</routes>

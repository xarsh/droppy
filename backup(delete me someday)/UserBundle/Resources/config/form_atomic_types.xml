<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="droppy_user.gender.form.type"
                class="Droppy\UserBundle\Form\Type\GenderFormType">
            <tag name="form.type" alias="gender_selector" />
        </service>
        
        <service id="droppy_user.birth_date.form.type"
                class="Droppy\UserBundle\Form\Type\BirthDateFormType">
            <tag name="form.type" alias="birth_date_form_type" />
        </service>
        
        <service id="droppy_user.birth_place.form.type"
                class="Droppy\UserBundle\Form\Type\BirthPlaceFormType">
            <tag name="form.type" alias="birth_place_form_type" />
        </service>
        
        <service id="droppy_user.current_location.form.type"
                class="Droppy\UserBundle\Form\Type\CurrentLocationFormType">
            <tag name="form.type" alias="current_location_form_type" />
        </service>
        
        <service id="droppy_user.language.form.type"
                class="Droppy\UserBundle\Form\Type\LanguageFormType">
            <tag name="form.type" alias="language_selector" />
        </service>
    </services>
</container>

{% block choice_widget %}
{% if expanded %}
<div {{ block('widget_container_attributes') }}>
	<dl class="ColorRadio" id="choice_event_color">
		<dd>
		<ul>
			{% for child in form %}
			<li>
			{{ form_widget(child, { 'attr' : { 'class' : child.vars.label } }) }}
			<label>{% if form.vars.label != 'color.name' %}{{ child.vars.name }}{% endif %}</label>
			</li>
			{% endfor %}
		</ul>
		</dd>
	</dl>
</div>
{% else %}
<select {{ block('widget_attributes') }}{% if multiple %} multiple="multiple"{% endif %}>
	{% if empty_value is not none %}
	<option value="">{{ empty_value|trans({}, 'DroppyWebApplicationBundle') }}</option>
	{% endif %}
	{% if preferred_choices|length > 0 %}
	{% set options = preferred_choices %}
	{{ block('widget_choice_options') }}
	{% if choices|length > 0 and separator is not none %}
	<option disabled="disabled">{{ separator }}</option>
	{% endif %}
	{% endif %}
	{% set options = choices %}
	{{ block('widget_choice_options') }}
</select>
{% endif %}
{% endblock choice_widget %}

{% block tag_widget %}
{% spaceless %}
{% for child in form %}
{{ form_widget(child.name) }}
{% endfor %}
{% endspaceless %}
{% endblock %}

{% block collection_widget %}
{% spaceless %}
{% if prototype is defined %}
{% set attr = attr|merge({'data-prototype': form_widget(prototype) }) %}
{% endif %}
{{ block('form_widget') }}
{% endspaceless %}
{% endblock collection_widget %}


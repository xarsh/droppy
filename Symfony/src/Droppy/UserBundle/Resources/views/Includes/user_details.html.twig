<div id="user_details" class="scrollable user_details">
	{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
	<button class="button_big white" onclick="backToCalendar()">{{ 'common.back_to_calendar' | trans({}, 'DroppyMainBundle') }}</button>
	{% endif %}
	<div class="user_profile">
		<div class="ym-column">
			<div class="ym-col1">
				<div class="ym-cbox user_icon">
					<img width="128" height="128" />
				</div>
			</div>
			<div class="ym-col3">
				<div class="ym-cbox">
					<p class="display_name"></p>
					<p class="unique_name"></p>
					<p class="description"></p>
                    <p class="drop_button">
                        <span class="button_small drop">
                            <img src="../img/check.png">
                            <span></span>
                        </span>
                    </p>
				</div>
			</div>
		</div>
	</div>

	<div id="user_relations_list" event-prototype='{% include 'DroppyUserBundle:Includes:profile_list_event.html.twig' %}'
	 user-prototype='{% include 'DroppyUserBundle:Includes:profile_list_user.html.twig' %}'>
		<div id="userdetails-tab">
			<ul>
				<li class="event_tab"><a href="#event_tab">
					<span>{{ 'event.public_events' | trans({}, 'DroppyMainBundle') }}</span>
				</a></li>
				<li class="droppings_tab"><a href="#droppings_tab">
					<span>{{ 'droppy.droppings' | trans({}, 'DroppyMainBundle') }}</span>
				</a></li>
				<li class="droppers_tab"><a href="#droppers_tab">
					<span>{{ 'droppy.droppers' | trans({}, 'DroppyMainBundle') }}</span>
				</a></li>
			</ul>
		</div><!-- // #ui-tab-3 -->
		<div id="event_tab">
		</div>
		<div id="droppings_tab">
			
		</div>
		<div id="droppers_tab">
			<div class="box first-select">

			</div>
		</div>
	</div>
</div>

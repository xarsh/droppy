<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="droppy_user.user.form" factory-method="createNamed" 
                factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument type="service" id="droppy_user.user.form.type" />
            <argument>user_form</argument>
        </service>
        
        <service id="droppy_user.user.form.type"
                class="Droppy\UserBundle\Form\Type\UserFormType">
            <tag name="form.type" alias="user_form_type" />
        </service>
        
        <service id="droppy_user.user.form.handler" scope="request"
                class="Droppy\UserBundle\Form\Handler\UserFormHandler">
            <argument type="service" id="droppy_user.user.form" />
            <argument type="service" id="request" />
            <argument type="service" id="droppy_user.user_manager" />
            <argument type="service" id="droppy_main.icon_uploader" />
        </service>
    </services>
</container>
